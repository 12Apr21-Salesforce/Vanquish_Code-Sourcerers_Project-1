<apex:page standardController="Contact" extensions="HireMeEXT" lightningStylesheets="true">
    
    <apex:form >
        <apex:pageBlock title="Hire Us">
            
            <apex:pageBlockSection title = "Looking to join Us, Tell us about yourself">
                <apex:inputField value="{!Contact.FirstName}"/>
                <apex:inputField value="{!Contact.Email}"/>
                <apex:inputField value="{!Contact.LastName}"/>
                <apex:inputField value="{!Contact.Phone}"/>
                
                <br/>
                <apex:panelGroup style="float: center">
                    <apex:commandButton ReRender = "confrimText" action="{!save2}" value="Save"/>
                </apex:panelGroup>
                <apex:outputText id = "confrimText">{!greeting}</apex:outputText>
                
            </apex:pageBlockSection>
            
        </apex:pageBlock>        
    </apex:form>

   
</apex:page>